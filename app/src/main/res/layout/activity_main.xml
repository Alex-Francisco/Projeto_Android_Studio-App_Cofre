<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/topo_background"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/circulo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/logo"

        android:layout_marginTop="30dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-26dp"
        app:srcCompat="@drawable/diagonal" />

    <ImageView
        android:id="@+id/sombra"
        android:layout_width="230dp"
        android:layout_height="275dp"
        android:layout_below="@+id/circulo"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/sombra_bg" />

    <ImageView
        android:id="@+id/bgcont"
        android:layout_width="230dp"
        android:layout_height="275dp"
        android:layout_below="@+id/circulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-52dp"
        app:srcCompat="@drawable/conteudo_bg" />

    <TextView
        android:id="@+id/txtservico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circulo"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="-32dp"
        android:text="Serviço:"
        android:textColor="#12b29a"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edtservico"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@id/txtservico"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/conteudo_bg"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#17c6ac"/>

    <TextView
        android:id="@+id/txtusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtservico"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="12dp"
        android:text="Usuário:"
        android:textColor="#12b29a"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edtusuario"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@id/txtusuario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/conteudo_bg"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#17c6ac"/>

    <TextView
        android:id="@+id/txtsenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtusuario"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="12dp"
        android:text="Senha:"
        android:textColor="#12b29a"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edtsenha"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@id/txtsenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/conteudo_bg"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#17c6ac"/>

    <Button
        android:id="@+id/btnant"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/edtsenha"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ant"
        android:fontFamily="@font/lato_bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:onClick="clickBtnAnterior"/>

    <Button
        android:id="@+id/btnNovo"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/edtsenha"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/botaoverdeoval"
        android:fontFamily="@font/lato_bold"
        android:onClick="clickBtnNovo"
        android:text="Novo"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnProx"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/edtsenha"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/proximo"
        android:fontFamily="@font/lato_bold"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:onClick="clickBtnProximo"/>

    <Button
        android:id="@+id/btnatualizar"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/btnNovo"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lato_bold"
        android:text="ATUALIZAR"
        android:layout_marginLeft="46dp"
        android:background="@drawable/botaoverdeoval"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:onClick="clickBtnAlterar"/>

    <Button
        android:id="@+id/btncadastrar"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/btnNovo"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botaoverdeoval"
        android:fontFamily="@font/lato_bold"
        android:onClick="clickBtnCadastrar"
        android:text="CADASTRAR"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btndeletar"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@id/btncadastrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/lato_bold"
        android:text="DELETAR"
        android:background="@drawable/botaovermelhooval"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:onClick="clickBtnDeletar"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>